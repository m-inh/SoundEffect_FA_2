<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableRow
        android:id="@+id/tr_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="@dimen/width_text_cut"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/start_time"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/edt_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:inputType="number|numberDecimal"
            android:textSize="17sp"
            android:padding="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tr_start"
        android:layout_below="@id/tr_start"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical|right">

        <TextView
            android:id="@+id/textView"
            android:layout_width="@dimen/width_text_cut"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="End"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/edt_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:inputType="number|numberDecimal"
            android:textSize="17sp"
            android:padding="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />
    </TableRow>

    <Button
        android:id="@+id/btn_submitcut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Submit" />

</RelativeLayout>